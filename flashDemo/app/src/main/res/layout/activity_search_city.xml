<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/layoutMargin_10"
    android:paddingRight="@dimen/layoutMargin_10"
    android:paddingTop="5dp"
    tools:context=".activity.SearchCityActivity">
    <SearchView
        android:id="@+id/searchView"
        android:background="@drawable/search_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:iconifiedByDefault="false"
        android:imeOptions="actionSearch"
        android:queryBackground="@null"
        android:showDividers="none"
        android:submitBackground="@null"
        android:queryHint="请输入搜索内容" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycleView_city"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>